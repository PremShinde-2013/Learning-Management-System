<!-- question-reply.ejs -->

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>New Question Arrival</title>
		<style>
			body {
				font-family: "Arial", sans-serif;
				background-color: #f4f4f4;
				margin: 0;
				padding: 0;
			}

			.container {
				width: 80%;
				margin: 0 auto;
			}

			header {
				background-color: #3498db;
				color: #fff;
				padding: 10px 0;
				text-align: center;
			}

			main {
				padding: 20px;
				background-color: #fff;
			}

			footer {
				background-color: #3498db;
				color: #fff;
				padding: 10px 0;
				text-align: center;
			}

			.notification {
				background-color: #4caf50; /* Green */
				color: white;
				text-align: center;
				padding: 10px;
				margin-bottom: 15px;
			}

			.notification a {
				color: #ffa500;
				text-decoration: none;
				font-weight: bold;
			}
		</style>
	</head>

	<body>
		<div class="container">
			<header>
				<h1>Discussion Forum</h1>
			</header>

			<main>
				<div class="notification">
					<p>
						A new question has arrived! Login now to continue the discussion.
					</p>
					<p><a href="/login">Login</a></p>
				</div>
				<p>Hello <%= name %>,</p>
				<!-- Your existing content for question and replies -->
				<p>
					Lorem ipsum dolor sit amet consectetur, adipisicing elit. Eius, quo
					libero? Fugit. "<%= title %>".
				</p>
			</main>

			<footer>
				<p>
					&copy; <%= new Date().getFullYear() %> YourCompany
					<a href="mailto:support@premshinde.com">support@LMS.com</a>. All
					rights reserved.
				</p>
			</footer>
		</div>
	</body>
</html>
