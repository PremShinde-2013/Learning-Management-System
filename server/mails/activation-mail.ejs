<!-- activation_email.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 0 auto;
        }

        header {
            background-color: #3498db;
            color: #fff;
            padding: 10px 0;
            text-align: center;
        }

        main {
            padding: 20px;
            background-color: #fff;
        }

        footer {
            background-color: #3498db;
            color: #fff;
            padding: 10px 0;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <header>
            <h1>Welcome to Elearning</h1>
        </header>

        <main>
            <p>Hello <%= user.name %>,</p>
            <p>Thank you for registering. To activate your account, please use following activation code:</p>
            <h2><%= activationCode %></h2>
            <p>Please enter this code on activation page within next 5 minutes</p>
            <p>If you did not register for this account, please ignore this email.</p>
        </main>

        <footer>
            <p>&copy; 2023 Prem Shinde <a href="mailto:support@prem.com">support@prem.com</a>. All rights reserved.</p>
        </footer>
    </div>
</body>

</html>